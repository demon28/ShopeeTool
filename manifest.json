 {
    "name": "ShopTool",
    "description" : "ShopTool",
    "version": "1.0",
    "manifest_version": 2,
     "browser_action": {
      "default_popup": "hello.html",
      "default_icon": "Shopee.png",

      "content_scripts": [
    {
      "matches": ["*://*/"],
      "js": ["jquery-3.2.1.js","b.js"]
    }
  ],



"background": { 
        "scripts": ["jquery-3.2.1.js","b.js"]
    },

      "permissions": [
        "contextMenus", // 右键菜单
        "tabs", // 标签
        "notifications", // 通知
        "webRequest", // web请求
        "webRequestBlocking",
        "storage", // 插件本地存储
        "http://*/*", // 可以通过executeScript或者insertCSS访问的网站
        "https://*/*" // 可以通过executeScript或者insertCSS访问的网站
      ]


    }
  }